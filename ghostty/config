# Switch left option key to alt to be able to switch Tmux panels
macos-option-as-alt = left

# Quit ghostty after last window is closed
quit-after-last-window-closed = true

# Allow alt 0/9 to be passed to terminal (for tmux window switching)
keybind = alt+0=unbind
keybind = alt+1=unbind
keybind = alt+2=unbind
keybind = alt+3=unbind
keybind = alt+4=unbind
keybind = alt+5=unbind
keybind = alt+6=unbind
keybind = alt+7=unbind
keybind = alt+8=unbind
keybind = alt+9=unbind

# Disable command-D split on macos
keybind = command+d=ignore

theme = kanagawabones

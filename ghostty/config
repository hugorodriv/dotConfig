# Switch left option key to alt to be able to switch Tmux panels
macos-option-as-alt = left

# Quit ghostty after last window is closed
quit-after-last-window-closed = true

# Allow alt 0/9 to be passed to terminal (for tmux window switching)
keybind = unconsumed:alt+0=ignore
keybind = unconsumed:alt+1=ignore
keybind = unconsumed:alt+2=ignore
keybind = unconsumed:alt+3=ignore
keybind = unconsumed:alt+4=ignore
keybind = unconsumed:alt+5=ignore
keybind = unconsumed:alt+6=ignore
keybind = unconsumed:alt+7=ignore
keybind = unconsumed:alt+8=ignore
keybind = unconsumed:alt+9=ignore

# Disable command-D split on macos
keybind = command+d=ignore

theme = Kanagawa Wave
